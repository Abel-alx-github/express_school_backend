{
  "version": 2,
  "builds": [
    {
      "src": "dist/server.js",  // Point to the compiled output file
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"  // Route API requests to the compiled file
    }
  ],
  "hooks": {
    "build": {
      "command": "npm run build"  // Specify the build command to compile TypeScript
    }
  }
}